{{> header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form action="#/edit/{{params.id}}" method="post">
    <div>
        <input type="text" placeholder="Name..." name="nameProduct" value="{{offers.nameProduct}}">
    </div>
    <div>
        <input type="text" placeholder="Price..." name="price" value="{{offers.price}}">
    </div>
    <div>
        <input type="text" placeholder="Image url..." name="imageUrl" value="{{offers.imageUrl}}">
    </div>
    <div>
        <textarea placeholder="Give us some description about this offer..."
            name="description">{{offers.description}}</textarea>
    </div>
    <div>
        <input type="text" placeholder="Brand..." name="brand" value="{{offers.brand}}">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{> footer}}